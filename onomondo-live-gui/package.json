{
  "name": "onomondo-live-gui",
  "version": "0.1.0",
  "description": "Electron GUI for onomondo-live - Visual interface for network packet capture",
  "main": "main/main.js",
  "author": "",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run dev:main\"",
    "dev:main": "cross-env NODE_ENV=development electron .",
    "dev:renderer": "cd renderer && npm run dev",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "cd renderer && npm run build",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "build:win": "npm run build:renderer && electron-builder --win",
    "lint": "eslint main renderer/src",
    "postinstall": "cd renderer && npm install"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "electron-store": "^8.1.0"
  },
  "optionalDependencies": {
    "onomondo-live": "*"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.onomondo.live.gui",
    "productName": "Onomondo Live GUI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "renderer/dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.networking",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}

